@model AngularRequireSignalR.Hubs.ViewModels.IChatRoom
@{
    ViewBag.Title = "Chat Room - " + Model.Name;
}

<div ng-controller="ChatController as ctrl" class="container" ng-init="ctrl.init('@Model.Name')" ng-cloak>
    <div class="row" ng-hide="ctrl.status == 'done'">
        <div ng-show="ctrl.status == 'connecting'">
            <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span>
        </div>
        <div ng-hide="ctrl.status == 'connecting'">
            <form ng-submit="ctrl.enterRoom()">
                <div class="input-group">
                    <div class="input-group-addon">Username:</div>
                    <input ng-model="ctrl.currentUserName" type="text" class="form-control">
                    <button type="submit" class="btn btn-primary btn-xs">Enter</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row" ng-controller="ChatRoomController">
        <div class="col-md-8">
            <div class="well">
                <p ng-repeat="message in room.messages" class="bg-info">
                    <span class="text-muted" ng-bind="message.timestamp | date:'medium'"></span>
                    <span class="text-info" ng-bind="message.user.name"></span>:
                    <span class="text-primary" ng-bind="message.message"></span>
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <ul class="list-unstyled">
                <li ng-repeat="user in room.users" class="bg-info">
                    {{user.name}}
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <form ng-submit="ctrl.addMessage()">
            <div class="input-group">
                <div class="input-group-addon">Message:</div>
                <input ng-model="ctrl.currentMessage" type="text" class="form-control">
                <button type="submit" class="btn btn-primary btn-xs">Send</button>
            </div>
        </form>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/require")
    @Scripts.Render("~/bundles/app")
}
